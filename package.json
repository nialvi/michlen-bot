{
	"name": "telegram-node-boilerplate",
	"version": "0.0.0",
	"description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
	"type": "module",
	"main": "./src/index.js",
	"engines": {
		"node": ">= 16.13 <17"
	},
	"devDependencies": {
		"@types/jest": "~27.5",
		"@types/node": "~16",
		"@typescript-eslint/eslint-plugin": "~5.26",
		"@typescript-eslint/parser": "~5.26",
		"env-cmd": "^10.1.0",
		"eslint": "~8.16",
		"eslint-config-prettier": "~8.5",
		"eslint-plugin-jest": "~26.2",
		"gen-env-types": "^1.3.4",
		"jest": "~28.1",
		"nodemon": "^2.0.19",
		"prettier": "~2.6",
		"rimraf": "~3.0",
		"ts-jest": "~28.0",
		"tsutils": "~3.21",
		"typescript": "~4.7"
	},
	"scripts": {
		"start": "node ./build/src/index.js",
		"dev": "npm run dev-env start:dev",
		"start:dev": "concurrently -k 'npm run build:watch' 'npm run dev:watch'",
		"dev:watch": "nodemon --watch build --exec npm run dev-env start-inspect",
		"start-inspect": "node --inspect build/src/index.js",
		"clean": "rimraf coverage build tmp",
		"prebuild": "npm run lint",
		"build": "tsc -p tsconfig.json",
		"build:watch": "tsc -w -p tsconfig.json",
		"build:release": "npm run clean && tsc -p tsconfig.release.json",
		"lint": "eslint . --ext .ts --ext .mts",
		"test": "jest --coverage",
		"prettier": "prettier --config .prettierrc --write .",
		"test:watch": "jest --watch",
		"gen-env": "gen-env-types .env -o src/env.d.ts -e .",
		"dev-env": "env-cmd -f ./.env npm run"
	},
	"author": "Viktor Nikoalev <maclauddd@gmail.com>",
	"license": "Apache-2.0",
	"dependencies": {
		"concurrently": "^7.3.0",
		"dotenv-safe": "^8.2.0",
		"firebase": "^9.9.3",
		"log4js": "^6.6.1",
		"telegraf": "^4.9.0",
		"tslib": "~2.4"
	},
	"volta": {
		"node": "16.13.0"
	}
}
